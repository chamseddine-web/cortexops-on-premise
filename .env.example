# ============================================
# CORTEXOPS - ON-PREMISE CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values

# ---- Application ----
NODE_ENV=production
WEB_PORT=80
WEB_SSL_PORT=443

# ---- Supabase (Required) ----
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=eyJxxx...your-anon-key

# ---- Database (Optional if using Supabase) ----
POSTGRES_DB=cortexops
POSTGRES_USER=cortexops
POSTGRES_PASSWORD=CHANGEME_STRONG_PASSWORD_HERE
POSTGRES_PORT=5432

# ---- Redis Cache ----
REDIS_PASSWORD=CHANGEME_REDIS_PASSWORD_HERE

# ---- Monitoring ----
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=CHANGEME_ADMIN_PASSWORD_HERE

# ---- Email (Optional - for notifications) ----
RESEND_API_KEY=re_xxx...your-resend-key
FROM_EMAIL=noreply@yourdomain.com

# ---- AI Models (Optional - for enhanced generation) ----
# Mistral AI (Recommended for DevOps)
VITE_MISTRAL_API_KEY=your-mistral-api-key-here
# OpenAI (Alternative)
VITE_OPENAI_API_KEY=your-openai-api-key-here
# Ollama endpoint (for local models)
VITE_OLLAMA_ENDPOINT=http://localhost:11434

# ---- Payments (Required - Stripe) ----
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_xxx...your-stripe-publishable-key

# ---- Payments (Optional - Mollie) ----
MOLLIE_API_KEY=test_xxx...your-mollie-key

# ---- Advanced Settings ----
# Redis
REDIS_MAXMEMORY=256mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# PostgreSQL
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=256MB

# Prometheus
PROMETHEUS_RETENTION_TIME=30d

# Nginx
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=2048
